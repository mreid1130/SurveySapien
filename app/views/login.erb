<div class="container">
  <div id="signup">
    <h1>Sign Up!</h1>
    <form action="/signup" method="POST">
      <label for="username">Username: </label>
      <input type="text" id="username" placeholder="Pick a username..." name="username"><br>
      <label for="password">Password: </label>
      <input type="password" id="password" placeholder="Pick a password..." name="password"><br>
      <label for="email">Email: </label>
      <input type="text" id="email" placeholder="What's your email?" name="email"><br>
      <input type="submit" value="Sign Up">
    </form>
  </div>
  <div id="login">
    <h1>Login</h1>
    <form action="/login" method="POST">
      <label for="username">Username: </label>
      <input type="text" placeholder="Enter username..." name="username"><br>
      <label for="password">Password: </label>
      <input type="password" id="password" placeholder="Enter password..." name="password"><br>
      <input type="submit" value="Login">
    </form>
  </div>
</div>
